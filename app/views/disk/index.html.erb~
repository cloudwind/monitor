<script> 
$(document).ready(function(){
	Morris.Donut({
		element: 'disk-chart',
		data: [
    			{label: "Disk Used", value: <%= @data[0]["DiskUsed"]%>},
    			{label: "Disk Free", value: <%= @data[0]["DiskFree"]%>} 
  		]
	});
});
	Morris.Area({
  		element: 'diskh-chart',
  		data:[
			<% for i in 1..5 %>
			{y: "<%= @data[i]["created_at"]%>",d: <%= @data[i]["DiskUsed"]%> }			
			<% if i != 0 %>
			<%= ',' %>
			<% end %>
			<% end %>
  		],
  		xkey: 'y',
  		ykeys: ['d'],
  		labels: ['Disk'],
		hideHover: 'auto'
	});
</script>
